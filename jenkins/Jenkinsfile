pipeline {
    agent any
    stages {
        stage('Build Image') {
            steps {
                dir('../docker') {
                    sh "$PWD"
                }
                script {
                	app = docker.build("alekseiabramenko/selenium-test-environment")
                }
            }
        }
        stage('Push Image') {
            steps {
                script {
			        docker.withRegistry('https://registry.hub.docker.com', 'dockerhub') {
			        	app.push("${BUILD_NUMBER}")
			            app.push("latest")
			        }
                }
            }
        }
    }
}